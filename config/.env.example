# Database
DATABASE_URL=postgresql+asyncpg://mxwhisper:mxwhisper135!@postgres.mixwarecs-home.net/mxwhisper

# Temporal
TEMPORAL_HOST=localhost:7233

# Upload settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=1073741824

# Whisper model configuration
# Options: tiny, base, small, medium, large
WHISPER_MODEL_SIZE=base

# Semantic Chunking Configuration
ENABLE_SEMANTIC_CHUNKING=true
CHUNKING_STRATEGY=ollama  # Options: ollama, sentence, simple

# Ollama Configuration (for topic-based chunking)
OLLAMA_BASE_URL=http://ollamas.mixwarecs-home.net
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=120
OLLAMA_MAX_RETRIES=3

# Chunk Settings
CHUNK_MIN_TOKENS=200
CHUNK_MAX_TOKENS=500
CHUNK_OVERLAP_TOKENS=50

# Heartbeat Settings (for Temporal activities)
ACTIVITY_HEARTBEAT_INTERVAL=5
ACTIVITY_HEARTBEAT_TIMEOUT=300

# Authentik Configuration
AUTHENTIK_SERVER_URL=https://auth.mixwarecs-home.net
AUTHENTIK_CLIENT_ID=your-client-id
AUTHENTIK_CLIENT_SECRET=your-client-secret
AUTHENTIK_ISSUER_URL=https://auth.mixwarecs-home.net/application/o/mxwhisper/
AUTHENTIK_JWKS_URL=https://auth.mixwarecs-home.net/application/o/mxwhisper/.well-known/jwks.json
AUTHENTIK_EXPECTED_ISSUER=https://auth.mixwarecs-home.net/application/o/mxwhisper/
AUTHENTIK_EXPECTED_AUDIENCE=your-client-id
AUTHENTIK_SCOPES=openid profile email
# Authentik API Configuration (for admin operations)
AUTHENTIK_API_URL=https://auth.mixwarecs-home.net/api/v3
AUTHENTIK_ADMIN_TOKEN=your-admin-token-here